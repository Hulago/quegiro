{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@quegiro/dashboard": ["./apps/dashboard/src/index.ts"],
      "@quegiro/irs": ["./apps/irs/src/index.ts"],
      "@quegiro/common": ["./libs/common/src/index.ts"],
      "@quegiro/next": ["./libs/next/src/index.ts"],
      "@quegiro/main-containers": ["./containers/main/src/index.ts"]
    },
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "include": ["*/**/*.ts", "*/**/*.d.ts", "*/**/*.tsx", "*/**/*.vue"]
}
